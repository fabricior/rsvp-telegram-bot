generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Group {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  telegramChatId  Int @unique  
  createdAt       DateTime  @default(now()) @ignore
  users           User[]
  games           Game[]

   @@map("groups")
}

type User {
  telegramUserId  Int
  firstName       String
  createdAt       DateTime  @default(now())
}

model Game {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  dateTime        DateTime  
  requiredPlayers Int
  createdAt       DateTime  @default(now()) @ignore

  rsvps           Rsvp[]
  guests          Guest[]
  
  group           Group @relation(fields: [groupId], references: [id])
  groupId         String @db.ObjectId

   @@map("games")
}

enum RsvpOption {
  YES
  NO
  MAYBE
} 

type Rsvp {  
  telegramUserId  Int
  option          RsvpOption
  createdAt       DateTime  @default(now())
}

type Guest {  
  guestName                     String
  invitedByTelegramUserId       Int
  guestNumber                   Int
  createdAt       DateTime  @default(now())
}

