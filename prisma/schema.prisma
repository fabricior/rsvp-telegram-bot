// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  telegramId  BigInt @unique
  firstName   String
  createdAt   DateTime  @default(now()) @ignore

   @@map("users")
}

model Game {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  dateTime    DateTime  
  requiredPlayers  Int
  createdAt   DateTime  @default(now()) @ignore

  rsvps       Rsvp[]

   @@map("games")
}

enum RsvpOption {
  YES
  NO
  MAYBE
} 

type Rsvp {  
  userId     String @db.ObjectId     // Relation fields inside composite types are not supported
  option     RsvpOption
  createdAt  DateTime  @default(now())
}

